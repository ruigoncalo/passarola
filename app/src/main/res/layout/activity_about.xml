<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_100"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_gravity="center"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="52dp"
            android:src="@drawable/logo_complete"/>

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="12dp"
            android:text="Bitter is better"
            android:textColor="@color/green_passarola"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/button_email"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:background="@drawable/selector_button_social"
            android:text="@string/email_passarola"
            android:textColor="@color/green_dark"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/button_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:padding="6dp"
            android:background="@drawable/selector_button_social"
            android:text="@string/facebook"
            android:textColor="@color/blue_facebook"
            android:textSize="16sp"/>

    </LinearLayout>

</LinearLayout>